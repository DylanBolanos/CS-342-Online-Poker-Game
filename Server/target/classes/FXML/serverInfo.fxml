<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="infoController"
            prefHeight="400.0" prefWidth="600.0">
    <right>
        <VBox>
            <Button fx:id="offBtn" text="Turn Off" onAction="#killServer"/>
            <Button fx:id="numClients" text="Clients: 0" disable="true"/>
        </VBox>
    </right>
    <center>
        <VBox alignment="CENTER">
            <ListView fx:id="serverInfo" maxWidth="400"/>
        </VBox>
    </center>
</BorderPane>
