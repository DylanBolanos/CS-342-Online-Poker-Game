<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="homeController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="root">
    <center>
        <VBox alignment="CENTER">
            <Label fx:id="homeLabel" text="Connect to 3 Card Poker Server"/>
            <TextField fx:id="ipText" text="Enter IP Address" maxWidth="200"/>
            <TextField fx:id="portText" text="Enter Port Number" maxWidth="200"/>
            <Button fx:id="connectBtn" text="Connect" onAction="#connect"/>
        </VBox>
    </center>
</BorderPane>
